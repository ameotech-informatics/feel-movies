@model MovieFeeler.Web.Models.HomeViewModel
@{
    ViewBag.Title = "Feel movies  : Home";
 
}

<!-- banner -->
<div id="slidey" style="display: none;">
    <ul>
        @foreach (var upcomgmovie in Model.UpcomingMovies.results)
        {
            <li>
                <img src="@upcomgmovie.backdrop_path" alt=" ">
                <p class='title'>@upcomgmovie.title</p>
                <p class='description'>
                    @upcomgmovie.overview
                </p>
            </li>    
        }
    </ul>
</div>

<!-- //banner -->


<!-- banner-bottom -->
<div class="banner-bottom">
    <div class="container-padding container">
        <div class="w3_agile_banner_bottom_grid">
            <div id="owl-demo" class="owl-carousel owl-theme">
                @foreach (var topratedmovie in Model.TopRatedMovies.results)
                {
                   
                        <div class="w3l-movie-gride-agile w3l-movie-gride-agile1">
                            <a  href="/movie/detail/@topratedmovie.id" class="hvr-shutter-out-horizontal">
                                <img src="@topratedmovie.poster_path"  class="fixheghtimage img-responsive" alt=" " />
                                <a class="w3_play_icon simple-ajax-popup-align-top" href="/trailor/index?id=@topratedmovie.id">
                                    <div class="w3l-action-icon"><i class="fa fa-play-circle" aria-hidden="true"></i></div>
                                </a>

                            </a>
                            <div class="mid-1 agileits_w3layouts_mid_1_home">
                                <div class="w3l-movie-text">
                                    <h6><a href="/movie/detail/@topratedmovie.id">@topratedmovie.short_title</a></h6>
                                </div>
                                <div class="mid-2 agile_mid_2_home" data-toggle="tooltip"
                                             title="@topratedmovie.vote_average">
                                    @if (!string.IsNullOrEmpty(topratedmovie.release_date))
                                    {
                                        <p>@DateTime.Parse(topratedmovie.release_date).Year</p>
                                    }
                                    else
                                    {
                                        <p>NA</p>
                                    }
                                    <div class="block-stars">
                                        <input  value="@topratedmovie.vote_average" type="number" class="rating" min=0 max=5 step=2 data-size="xxs" >
                                    </div>
                                    <div class="clearfix"></div>
                                </div>
                            </div>
                            <!--<div class="ribben">
                                <p>NEW</p>
                            </div>-->
                        </div>
                  					
                }
            </div>
        </div>
    </div>
</div>
<!-- //banner-bottom -->
<!-- general -->
