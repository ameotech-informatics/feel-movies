                                     <a class="w3_play_icon simple-ajax-popup-align-top" href="/trailor/index?id=@upcomingmovie.id">
                                        <div class="w3l-action-icon"><i class="fa fa-play-circle" aria-hidden="true"></i></div>
                                    </a>
                                        </a>
                                    <div class="mid-1 agileits_w3layouts_mid_1_home">
                                        <div class="w3l-movie-text">
                                            <h6><a href="/tv/detail/@upcomingmovie.id">@upcomingmovie.short_title</a></h6>
                                        </div>
                                        <div class="mid-2 agile_mid_2_home" data-toggle="tooltip"
                                             title="@upcomingmovie.vote_average">
                                            @if (!string.IsNullOrEmpty(upcomingmovie.release_date))
                                            {
                                                <p>@DateTime.Parse(upcomingmovie.release_date).Year</p>
                                            }
